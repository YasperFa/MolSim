<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="../src/IO/Input/schema.xsd">
    <output>
        <baseName>VTK</baseName>
        <writeFrequency>50</writeFrequency>
    </output>
    <calculator>
        <calculatorForce>LJC</calculatorForce>
    </calculator>
    <container>
        <containerType>LCC</containerType>
        <cutoffRadius>2.75</cutoffRadius>
        <domainSize>
            <x>26.2</x>
            <y>30</y>
            <z>12</z>
        </domainSize>
        <boundaryType>
            <left>reflecting</left>
            <right>reflecting</right>
            <top>periodic</top>
            <bottom>periodic</bottom>
            <front>periodic</front>
            <back>periodic</back>
        </boundaryType>
    </container>
    <parameters>
        <tEnd>500</tEnd>
        <deltaT>0.0005</deltaT>
        <gravity>-0.8</gravity>
        <parallelVersion2>0</parallelVersion2>
    </parameters>
    <shapes>
        <cuboid>
            <position>
                <x>2.2</x>
                <y>0.6</y>
                <z>0.6</z>
            </position>
            <dimensions>
                <x>20</x>
                <y>25</y>
                <z>10</z>
            </dimensions>
            <initialVelocity>
                <x>0</x>
                <y>0</y>
                <z>0</z>
            </initialVelocity>
            <distance>1.2</distance>
            <meanVelocity>0.1</meanVelocity>
            <mass>1.0</mass>
            <type>1</type>
            <epsilon>1.0</epsilon>
            <sigma>1.0</sigma>
        </cuboid>
    </shapes>
    <temperature>
        <ThermoType>average</ThermoType>
        <initialTemperature>40.0</initialTemperature>
        <timeSteps>10</timeSteps>
    </temperature>
</simulation>