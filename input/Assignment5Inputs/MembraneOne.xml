<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="../src/IO/Input/schema.xsd">
    <output>
        <baseName>VTK</baseName>
        <writeFrequency>40</writeFrequency>
    </output>
    <calculator>
        <calculatorForce>LJC</calculatorForce>
        <repulsiveOnly>true</repulsiveOnly>
        <nonNeighboursOnly>true</nonNeighboursOnly>
    </calculator>
    <container>
        <containerType>LCC</containerType>
        <cutoffRadius>4.0</cutoffRadius>
        <domainSize>
            <x>148</x>
            <y>148</y>
            <z>148</z>
        </domainSize>
        <boundaryType>
            <left>reflecting</left>
            <right>reflecting</right>
            <top>reflecting</top>
            <bottom>reflecting</bottom>
            <front>reflecting</front>
            <back>reflecting</back>
        </boundaryType>
    </container>
    <parameters>
        <tEnd>500</tEnd>
        <deltaT>0.01</deltaT>
        <gravity>-0.001</gravity>
        <parallelVersion2>0</parallelVersion2>
        <assignNeighbours>true</assignNeighbours>
        <harmonicForce>
            <harmonicOn>true</harmonicOn>
            <stiffnessConstant>300</stiffnessConstant>
            <avgBondLength>2.2</avgBondLength>
        </harmonicForce>
        <specialForce>
            <upwardForce>0.8</upwardForce>
            <activeTimeSteps>15000</activeTimeSteps>
            <markedParticles>
                <coordinates>
                    <x>17</x>
                    <y>24</y>
                </coordinates>
                <coordinates>
                    <x>17</x>
                    <y>25</y>
                </coordinates>
                <coordinates>
                    <x>18</x>
                    <y>24</y>
                </coordinates>
                <coordinates>
                    <x>18</x>
                    <y>25</y>
                </coordinates>
            </markedParticles>
        </specialForce>
    </parameters>
    <shapes>
        <cuboid>
            <position>
                <x>15</x>
                <y>15</y>
                <z>1.5</z>
            </position>
            <dimensions>
                <x>50</x>
                <y>50</y>
                <z>1</z>
            </dimensions>
            <initialVelocity>
                <x>0</x>
                <y>0</y>
                <z>0</z>
            </initialVelocity>
            <distance>2.2</distance>
            <meanVelocity>0.1</meanVelocity>
            <mass>1.0</mass>
            <type>0</type>
            <epsilon>1.0</epsilon>
            <sigma>1.0</sigma>
        </cuboid>
    </shapes>
</simulation>
