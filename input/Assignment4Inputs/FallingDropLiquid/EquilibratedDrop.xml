<?xml version="1.0" encoding="UTF-8"?>
<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="../src/IO/Input/schema.xsd">
    <output>
        <baseName>VTK</baseName>
        <writeFrequency>50</writeFrequency>
    </output>
    <calculator>
        <calculatorForce>LJC</calculatorForce>
    </calculator>
    <container>
        <containerType>LCC</containerType>
        <cutoffRadius>3.0</cutoffRadius>
        <domainSize>
            <x>303</x>
            <y>180</y>
            <z>1</z>
        </domainSize>
        <boundaryType>
            <left>reflecting</left>
            <right>reflecting</right>
            <top>reflecting</top>
            <bottom>reflecting</bottom>
            <front>outflow</front>
            <back>outflow</back>
        </boundaryType>
    </container>
    <parameters>
        <tEnd>50</tEnd>
        <deltaT>0.0005</deltaT>
        <gravity>-12.44</gravity>
    </parameters>
    <shapes>
        <disc>
            <center>
                <x>150</x>
                <y>150</y>
                <z>0</z>
            </center>
            <radius>20</radius>
            <initialVelocity>
                <x>0</x>
                <y>0</y>
                <z>0</z>
            </initialVelocity>
            <distance>1.2</distance>
            <mass>1.0</mass>
        </disc>
    </shapes>
    <subSimulations>
        <subSimulation>
            <name>Basin</name>
            <inputFile>../input/Assignment4Inputs/FallingDropLiquid/Subsimulations/Basin.xml</inputFile>
        </subSimulation>
    </subSimulations>
</simulation>
