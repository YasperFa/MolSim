<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="../src/IO/Input/schema.xsd">
    <output>
        <baseName>VTK</baseName>
        <writeFrequency>40</writeFrequency>
    </output>
    <calculator>
        <calculatorForce>LJC</calculatorForce>
    </calculator>
    <container>
        <containerType>LCC</containerType>
        <cutoffRadius>3</cutoffRadius>
        <domainSize>
            <x>300</x>
            <y>54</y>
            <z>1</z>
        </domainSize>
        <boundaryType>
            <left>periodic</left>
            <right>periodic</right>
            <top>reflecting</top>
            <bottom>reflecting</bottom>
            <front>outflow</front>
            <back>outflow</back>
        </boundaryType>
    </container>
    <parameters>
        <tEnd>50</tEnd>
        <deltaT>0.0005</deltaT>
        <gravity>-12.44</gravity>
    </parameters>
    <shapes>
        <cuboid>
            <position>
                <x>0.6</x>
                <y>2</y>
                <z>0</z>
            </position>
            <dimensions>
                <x>250</x>
                <y>20</y>
                <z>1</z>
            </dimensions>
            <initialVelocity>
                <x>0</x>
                <y>0</y>
                <z>0</z>
            </initialVelocity>
            <distance>1.2</distance>
            <meanVelocity>0.1</meanVelocity>
            <mass>1.0</mass>
            <type>0</type>
            <epsilon>1.0</epsilon>
            <sigma>1.2</sigma>
        </cuboid>
        <cuboid>
            <position>
                <x>0.6</x>
                <y>27</y>
                <z>0</z>
            </position>
            <dimensions>
                <x>250</x>
                <y>20</y>
                <z>1</z>
            </dimensions>
            <initialVelocity>
                <x>0</x>
                <y>0</y>
                <z>0</z>
            </initialVelocity>
            <distance>1.2</distance>
            <meanVelocity>0.1</meanVelocity>
            <mass>2.0</mass>
            <type>1</type>
            <epsilon>1.0</epsilon>
            <sigma>1.1</sigma>
        </cuboid>
    </shapes>
    <temperature>
        <ThermoType>direct</ThermoType>
        <initialTemperature>40.0</initialTemperature>
        <timeSteps>1000</timeSteps>
    </temperature>
</simulation>
